<%= form_for :user, url: '/login' do |f| %>
<%= f.label :name %>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br><br>

    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <%= f.submit 'Login' %>
<% end %>


<h3>Or, Sign Up!</h3>
<%= link_to "Signup", '/signup' %>
