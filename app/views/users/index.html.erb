
<h1> Store your current projects on ProjectBox </h1>


<%= form_for :user, url: '/login' do |f| %>
<%= f.label :name %>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br><br>

    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <%= f.submit 'Login' %>
<% end %>

  <%= link_to('Log in with Google!', '/auth/google_oauth2') %>


<h4>Or, Sign Up!</h4>
<%= link_to "Signup", '/signup' %>
