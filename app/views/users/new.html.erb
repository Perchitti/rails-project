<br>
<%= form_for :user, url: '/signup' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>

  <br>

  <%= f.label :password %>
  <%= f.password_field :password, :required => true %>

  <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <%= f.submit "Sign Up" %>

  <% end %>
